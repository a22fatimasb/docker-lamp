{% extends 'base.html.twig' %}


{% block body %}

    <h1>Animales</h1>


        {#  Bucle para imprimir todos los animales que se encuentren en el array #}
        {% for animal in pets.pets %} 
                 
                <h3>Nombre del animal -> {{ animal.name }}</h3> {# Nombre del animal #}
                <p><strong>Especie del animal:</strong> {{ animal.species }}</p> 

                {% if animal.favFoods is defined %}
                 {% for comida in animal.favFoods %} 
                <p><strong> Comida favorita:</strong> {{ comida }}  </p>   
                        {% endfor %}   
                {% endif %}     
                <p><strong>AÃ±o nacimiento:</strong> {{ animal.birthYear }}</p>              
            
               <div class="imagen">
                <img src="{{ animal.photo }}" width="250" height="250"> {# Imagen del animal #}
                </div>

        {% endfor %}



{% endblock %}
