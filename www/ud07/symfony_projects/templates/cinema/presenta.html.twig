{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
<div class="jumbotron-img jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Películas en Cartelera</h1>
    </div>
</div>
<div class="container">

    <div class="col-12 col-md-8 ps-5">
        <h2 class="mb-4">Películas</h2>
        
        {% for pelicula in peliculas %}
        <div class="song-list">
            <div class="d-flex mb-3">
                <div class="col-2 text-center">
                    <img src="{{ pelicula.foto }}" width="100" height="100">
                </div>
                <div class="song-details">
                     <h3>{{ pelicula.titulo }}</h3>
                    <p>{{ pelicula.resumen }}</p>
                    <p><strong>Dirección:</strong>{{ pelicula.director }}</p>
                    <div class="container">
                    <a href="{{ path('ficha_pelicula', { id: pelicula.id}) }}">Ver Ficha</a>
</div>

            </div>
        </div>
        
    </a>
</div>

        {% endfor %}
    </div>
</div>

{% endblock %}
